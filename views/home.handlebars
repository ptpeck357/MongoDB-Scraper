<div class="container">

	<div class="jumbotron">

		<h1>The New York Times</h1>
		
	</div>

	<br>
	
	{{#unless articles}}

	  	<div class="panel panel-default">

		    <div class="panel-heading panel-heading-custom bodyheading">Top Articles</div>
			
				<div class="panel-body" id="panelbody">
			    	<br><Br><Br><Br><br><Br><Br><Br>
			    </div>
	  	</div>

  	{{/unless}}
	
	<div class="panel-body" id="panelbody">
					
		{{#if articles}}

			{{#each articles}}

		    	<div class="card card-inverse" style="background-color: #333; margin-bottom: 20px; margin-top: 20px;">
		    		{{!-- <img class="card-img-left" src="{{image}}" alt="Card image cap" style="width: 150px;"> --}}
				  	<div class="card-block" style="background-color: lightgray">
				    	<a href="{{url}}" id="URL"><h3 class="card-header">{{title}}<span><a class="btn btn-success" id="save" >Save Article</a></span></h3></a>
				    	<br>
				    	<p class="card-text">{{summary}}</p> 
				    	
				  	</div>
				</div>

	    	{{/each}}

		{{/if}}
	</div>

</div>