<div class="container">

	<div class="jumbotron">

		<h1>The New York Times</h1>
		
	</div>

	<br>
	
	{{#unless articles}}

	  	<div class="panel panel-default">

		    <div class="panel-heading panel-heading-custom bodyheading">Saved Articles</div>
			
				<div class="panel-body" id="panelbody">
			    	<br><Br><Br><Br><br><Br><Br><Br>
			    </div>
	  	</div>

  	{{/unless}}
	
	<div class="panel-body" id="panelbody">
					
		{{#if articles}}

			{{#each articles}}

		    	<div class="card card-inverse" style="background-color: #333; margin-bottom: 20px; margin-top: 20px;">
		    		{{!-- <img class="card-img-left" src="{{image}}" alt="Card image cap" style="width: 150px;"> --}}
				  	<div class="card-block" style="background-color: lightgray">
				    	<br>
				    	<p class="card-text">{{summary}}</p> 
				    	
				  	</div>
				</div>

	    	{{/each}}

		{{/if}}
	</div>

</div>