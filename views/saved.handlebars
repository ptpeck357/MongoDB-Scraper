<div class="container">

	<div class="jumbotron">

		<h1>The New York Times</h1>
		
	</div>

	<br>
	
	{{#unless articles}}

	  	<div class="panel panel-default">

		    <div class="panel-heading panel-heading-custom bodyheading">Saved Articles</div>
			
				<div class="panel-body" id="panelbody">
			    	<br><Br><Br><Br><br><Br><Br><Br>
			    </div>
	  	</div>

  	{{/unless}}
	
	<div class="panel-body panel-default" id="panelbody">
		

		{{#if articles}}

		<div class="panel-heading panel-heading-custom bodyheading">Saved Articles</div>
			{{#each articles}}

		    	<div class="col-md-12" id="cardbody">
				  	<div class="card-block">
				    	<a href="{{url}}" id="URL">
				    		<h3 class="card-header d-flex justify-content-start align-items-center">{{title}}</a>
					    			<button class="btn btn-success ml-auto p-2" type="submit" id="addnote">Article Note</button>
				    				<button class="btn btn-danger ml-2 p-2 deleteone" type="button">Delete from Saved</button>
				    		</h3>
				    	<br>
				    	<p class="card-text" id="summary">{{summary}}</p> 
				    	
				  	</div>
				</div>

	    	{{/each}}

		{{/if}}
	</div>

</div>
{{!-- Modal to confirm to delete only one article with all its notes --}}
<div class="modal fade" id="deleteone" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content panel-warning">
			<div class="modal-header panel-heading">
				<h4 class="modal-title">Warning!</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">

				<p id="modaltext">Deleting this article will also delete all your corresponding notes. Are you sure?</p>

			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
				<span>

					{{#each articles}}
					<form action="/delete/{{_id}}" method="GET">
						<button type="submit" class="btn btn-danger">Delete Article</button>
					</form></span>
					{{/each}}
			</div>

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

{{!-- Modal to confirm deleting all the articles and notes --}}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content panel-warning">
			<div class="modal-header panel-heading">
				<h4 class="modal-title">Warning!</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">

				{{#if articles}}

				<p id="modaltext">Deleting all the articles will also delete all your notes. Are you sure?</p>

				{{else}}
				<p id="modaltext">There are no articles to delete</p>

				{{/if}}

			</div>

			{{#if articles}}

			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
				<span><form action="/delete" method="GET">
					<button type="submit" class="btn btn-danger">Delete Articles</button>
				</form></span>
			</div>

		{{else}}

			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
			</div>

		{{/if}}

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

